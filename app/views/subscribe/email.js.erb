button = $('#subscribe')
oldText = button.val()
button.val('<%= params[:suggestion].blank? ? 'Subscribed' : 'Thanks for the suggestion!' %>')
setTimeout(function() {
  button.val(oldText)
  $('#email').val('')
  $('#suggestion').val('')
}, 2050)
setTimeout(function() {
  $('.sub-container').removeClass('visible')
}, 2000)