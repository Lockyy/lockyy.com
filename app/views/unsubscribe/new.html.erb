<% provide(:title, "Unsubscribe") %>

<div class="row">
  <div class="col-lg-12">
    <div class="section wrapper padded">

      <h1>Unsubscribe from emails</h1>

      <div class='m-b'>
        If you would no longer like to receive emails from me please fill in the form below and click Unsubscribe.
      </div>

      <%= form_tag emails_path, method: :delete do %>
        <div class='input-group'>
          <%= text_field_tag :email, '', placeholder: :Email,
                                         required: true,
                                         class: 'form-control m-b-lg' %>

          <span class="input-group-btn">
            <%= submit_tag "Unsubscribe", id: 'unsubscribe', class: 'btn btn-warning' %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
