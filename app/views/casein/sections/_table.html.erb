<!-- Scaffolding generated by Casein v.4.0.0 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Description</th>
		<th>Order</th>
		<th>&nbsp;</th>
	</tr>
	
	<% sections.each_with_index do |section, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= section.id %></td>
			<td><%= casein_table_cell_link section.name, casein_section_path(section) %></td>
			<td><%= casein_table_cell_link section.description, casein_section_path(section) %></td>
			<td><%= casein_table_cell_link section.order, casein_section_path(section) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_section_path(section), :method => :delete, :data => { :confirm => "Are you sure you want to delete this section?" }) %>
			</td>
		</tr>
	<% end %>
</table>