<!-- Scaffolding generated by Casein v5.0.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Section", :section_id %></th>
			<th><%= casein_sort_link "Position", :position %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% sections.each do |section| %>
		<tr>
			<td><%= casein_table_cell_link section.name, casein_section_path(section) %></td>
			<td><%= casein_table_cell_link sanitize(section.description, tags: []), casein_section_path(section) %></td>
			<td>
				<% if section.section %>
					<%= casein_table_cell_link 	section.section.name, 
																			casein_section_path(section.section) %>
				<% else %>
					<%= casein_table_cell_link 'n/a', casein_section_path(section) %>
				<% end %>
			</td>
			<td><%= casein_table_cell_link section.position, casein_section_path(section) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_section_path(section), :method => :delete, :data => { :confirm => "Are you sure you want to delete this section?" }) %>
			</td>
		</tr>
	<% end %>
</table>