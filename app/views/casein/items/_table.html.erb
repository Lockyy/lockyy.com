<!-- Scaffolding generated by Casein v.4.0.0 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>ID</th>
		<th>Section</th>
		<th>Name</th>
		<th>Content</th>
		<th>Link</th>
		<th>Order</th>
		<th>&nbsp;</th>
	</tr>
	
	<% items.each_with_index do |item, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= item.id %></td>
			<td><%= casein_table_cell_link item.section_id, casein_item_path(item) %></td>
			<td><%= casein_table_cell_link item.name, casein_item_path(item) %></td>
			<td><%= casein_table_cell_link item.content, casein_item_path(item) %></td>
			<td><%= casein_table_cell_link item.link, casein_image_path(item) %></td>
			<td><%= casein_table_cell_link item.order, casein_item_path(item) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_item_path(item), :method => :delete, :data => { :confirm => "Are you sure you want to delete this item?" }) %>
			</td>
		</tr>
	<% end %>
</table>