<!-- Scaffolding generated by Casein v5.0.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "ID", :id %></th>
			<th><%= casein_sort_link "Section", :section_id %></th>
			<th><%= casein_sort_link "Position", :position %></th>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Content", :content %></th>
			<th><%= casein_sort_link "Link", :link %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% items.each do |item| %>
		<tr>
			<td><%= casein_table_cell_link item.id, casein_item_path(item) %></td>
			<td><%= casein_table_cell_link item.section_id, casein_section_path(item.section) %></td>
			<td><%= casein_table_cell_link item.position, casein_item_path(item) %></td>
			<td><%= casein_table_cell_link item.name, casein_item_path(item) %></td>
			<td><%= casein_table_cell_link sanitize(item.content, tags: []), casein_item_path(item) %></td>
			<td><%= casein_table_cell_link item.link, item.link %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_item_path(item), :method => :delete, :data => { :confirm => "Are you sure you want to delete this item?" }) %>
			</td>
		</tr>
	<% end %>
</table>