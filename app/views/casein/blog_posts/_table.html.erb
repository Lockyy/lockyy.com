<!-- Scaffolding generated by Casein v5.0.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Category", :blog_category_id %></th>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Date posted", :date_posted %></th>
			<th><%= casein_sort_link "Views", :views %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% blog_posts.each do |blog_post| %>
		<tr>
			<td class="category-column">
				<%= casein_table_cell_link blog_post.blog_category.title, casein_blog_post_path(blog_post) %>
			</td>

			<td>
				<%= casein_table_cell_link blog_post.title, casein_blog_post_path(blog_post) %>
			</td>

			<td class="datetime-column">
				<%= casein_table_cell_link blog_post.date_posted, casein_blog_post_path(blog_post) %>
			</td>

			<td class="datetime-column">
				<%= casein_table_cell_link blog_post.views, casein_blog_post_path(blog_post) %>
			</td>

			<td class="delete">
				<%= link_to(	casein_show_row_icon("trash"), 
											casein_blog_post_path(blog_post), 
											method: :delete, 
											data: { :confirm => "Are you sure you want to delete this blog post?" }) %>
			</td>
		</tr>
	<% end %>
</table>