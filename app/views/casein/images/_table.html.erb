<!-- Scaffolding generated by Casein v.4.0.0 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>ID</th>
		<th>Item</th>
		<th>Description</th>
		<th>Order</th>
		<th>Image</th>
		<th>&nbsp;</th>
	</tr>
	
	<% images.each_with_index do |image, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= image.id %></td>
			<td><%= casein_table_cell_link image.item_id, casein_image_path(image) %></td>
			<td><%= casein_table_cell_link image.description, casein_image_path(image) %></td>
			<td><%= casein_table_cell_link image.order, casein_image_path(image) %></td>
			<td><%= image_tag(image.image.url(:thumb), class: "image-thumb") %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_image_path(image), :method => :delete, :data => { :confirm => "Are you sure you want to delete this image?" }) %>
			</td>
		</tr>
	<% end %>
</table>