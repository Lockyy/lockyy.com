<!-- Scaffolding generated by Casein v5.0.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "ID", :id %></th>
			<th><%= casein_sort_link "Item", :item_id %></th>
			<th><%= casein_sort_link "Position", :position %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% images.each do |image| %>
		<tr>
			<td><%= casein_table_cell_link image.id, casein_image_path(image) %></td>
			<td><%= casein_table_cell_link image.item_id, casein_item_path(image.item) %></td>
			<td><%= casein_table_cell_link image.position, casein_image_path(image) %></td>
			<td><%= casein_table_cell_link sanitize(image.description, tags: []), casein_image_path(image) %></td>
			<td><%= image_tag(image.image.url(:thumb), class: "image-thumb") %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_image_path(image), :method => :delete, :data => { :confirm => "Are you sure you want to delete this image?" }) %>
			</td>
		</tr>
	<% end %>
</table>