button = $('.sub-container #subscribe')
oldText = button.val()
button.val('<%= subscribe_message(@suggestion, @mailchimp_add_successful, @email_address) %>')
setTimeout(function() {
  button.val(oldText)
  $('.sub-container #submission_email').val('')
  $('.sub-container #submission_suggestion').val('')
  $('.sub-container #sub-button').html('Subscribe')
}, 2050)
setTimeout(function() {
  $('.sub-container').removeClass('visible')
}, 2000)