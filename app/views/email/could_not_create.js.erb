button = $('#subscribe')
oldText = button.val()
button.val('<%= failed_subscribe_message(@email_address, suggestion_string) %>')
setTimeout(function() {
  button.val(oldText)
  $('.sub-container #email').val('')
  $('.sub-container #suggestion').val('')
  $('.sub-container #sub-button').html('Subscribe')
}, 2050)
setTimeout(function() {
  $('.sub-container').removeClass('visible')
}, 2000)