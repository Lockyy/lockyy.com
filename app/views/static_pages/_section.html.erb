<div class="section">
	<div class="box <%= "subsection" if subsection %>">
		<h4>
		<%= section.name %>
		</h4>
		<%= markdown(section.description) %>

	</div>
	<div class="subsection-items">
		<%= render partial: 'item', collection: section.items.order(:order) %>
		<%= render partial: 'section', collection: section.subsections.order(:order), locals: { subsection: true } %>
	</div>
</div>